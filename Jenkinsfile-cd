pipeline {
  agent any
  environment {
        PATH = "/opt/gradle/gradle-6.3/bin:$PATH"
        SLACK_CHANNEL = '#jenkins-notification'
    }

  stages {
    stage('Git Checkout') {
              steps {
                  checkout scm
                  echo 'Git Checkout Success!'
              }
    }


      stage('Deploy') {
              steps([$class: 'BapSshPromotionPublisherPlugin']) {
                  sshPublisher(
                      continueOnError: false, failOnError: true,
                      publishers: [
                          sshPublisherDesc(
                              configName: "shoe-auction-deploy",
                              verbose: true,
                              transfers: [
                                  sshTransfer(
                                      sourceFiles: "",
                                      removePrefix: "",
                                      remoteDirectory: "",
                                      execCommand: "sh ~/app/step1/deploy.sh"
                                  )
                              ]
                          )
                      ]
                  )
              }
          }
}
  post {
    success {
         slackSend (channel: SLACK_CHANNEL, color: '#00FF00', message: "SUCCESSFUL: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]' (${env.BUILD_URL})")
         }

    failure {
         slackSend (channel: SLACK_CHANNEL, color: '#F01717', message: "FAILURE: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]' (${env.BUILD_URL})")
         }
  }
}
